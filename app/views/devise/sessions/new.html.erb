
<%# ----------SIGNIN------------- %>
<div class="content" style=" height: 68vh">
  <div class="container d-flex justify-content-center text-center text-dark bg-light border border-dark rounded mt-5 pt-3 pb-3" style="max-width: 30rem;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>Log in</h2>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:'btn btn-primary'%>
    <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
