<div class="container">

   <div id="product">
      <div id="content">
        <div class="img-cote" >
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <%#= cl_image_tag @product.image%>
                </div>
                <div class="carousel-item">
                  <%#= cl_image_tag @product.image.key %>
                </div >
                <div class="carousel-item">
                  <%#= cl_image_tag @product.image.key%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="infos-product">
        <h2 id="titre"><%= @product.title %></h2>
        <div class = "display-title">
          <ol>
            <p class="price"><%= @product.price%> <%="€" %></p >
            <p class="time"><%= @product.created_at %></p >
          </ol>
        </div>
        <div id="header"></div>
          <div class = display-description>
          <button type="button" class="btn btn-primary">Sélectionner ce produit</button>

          <div class="notification">
            <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
              <div class="notification-content">
                <p>Par <strong>Jean Claude Delavigne</strong></p>
              </div>
          </div>

            <p class="description"><%= "Description :"%></p>
          <%= @product.description %>
          </div>
      </div>
    </div>

  <div>
    <div class="vendor">
      <div class="notification">
        <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
          <div class="notification-content">
            <p>Par <strong>Jean Claude Delavigne</strong></p>
            <p>16 annonces</p>
          </div>
      </div>

      <div class="vendeur-notif">
        <i class="far fa-heart"></i>
          <div class="vendeur-content">
            <p>Membre depuis novembre 2015</p>
          </div>
      </div>
      <div class="vendeur-notif">
        <i class="far fa-heart"></i>
          <div class="vendeur-content">
            <p>Répond généralement en une journée</p>
          </div>
      </div>
      <div id="bouton">
        <button type="button" class="btn btn-success">Contacter le vendeur</button>
      </div>

    </div>

    <div class="div-map">
      <div>
        <div id="map"
          style="width: 600px; height: 500px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
