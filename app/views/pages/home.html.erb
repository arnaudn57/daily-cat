</div>

<%# -------BANNER------ %>

<div class="banner-content">
  <div class="banner-img-text">
    <div class="image">
      <%= image_tag("cat-home-page.jpeg", class: "menu_icon") %>
    </div>
    <div class="banner-text">
      <h2>La bonne affaire à deux pates de chez toi</h2>
      <h3>Rentabilise tes croquettes</h3>
      <br>
      <br>
      <%= link_to "JE DECOUVRE", "#", class: "btn btn-outline-primary" %>
    </div>
  </div>

<%# ----------SEARCH-BAR----------- %>
    <div class="search-bar">
      <%= simple_form_for @product, url: products_path, method: :get, html: {class: 'form-inline'} do |f| %>
        <%= f.input :category, collection: Product.all.map(&:category), label: false, placeholder: 'Categorie', wrapper_html: {class: "mr-3 rounded-pill"}%>
        <%= f.input :title, label: false, placeholder: "Nom de l'article", wrapper_html: {class: "mr-3 rounded-pill"}%>
        <%= f.input :title, label: false, placeholder:'Ville', class: "search-bar-form", wrapper_html: {class: "mr-3 rounded-pill"}%>
        <%= f.button :submit ,'GO 🐾', label:'GO', class:"btn btn-primary rounded-pill"%>
      <% end %>
    </div>

</div>
