<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <h1>DailyCat</h1>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "AJOUTER UNE ANNONCE 🐱 ", new_product_path, class: "nav-link btn btn-outline-secondary mr-3" %>
      </li>
      <li class="nav-item active">
        <%= link_to "SIGN IN", cat_session_path, class: "nav-link btn btn-outline-secondary" %>
      </li>
      <li class="nav-item">
        <%= link_to "SIGN UP", new_cat_registration_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "DISCONECT", destroy_cat_session_path, method: :delete, class: "nav-link btn btn-outline-danger text-danger" %>
      </li>
      <li class="nav-item dropdown">

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", cat_session_path, class: "dropdown-item" %>
          <%= link_to "Log out", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="container d-flex justify-content-center align-center text-center text-dark bg-light border border-dark rounded mt-5 rounded" style="max-width: 30rem;">
  <%= simple_form_for @product do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price, input_html: { min: '0', step: 'any' } %>
    <%= f.input :category, collection: ['hygiène', 'jouets', 'miam', 'maison'] %>
    <%= f.input :image, as: :file %>
    <%= f.submit :submit, class: "btn btn-primary" %>
  <% end %>
</div>
